<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= best_in_place @location, :name %>
</p>

<p>
  <strong>Address:</strong>
  <%= best_in_place @location, :address %>
</p>

<p>
  <strong>Category:</strong>
  <%= best_in_place @location, :category %>
</p>

<i>Click on above data for in-place editing</i>
<br>

<% if Rails.env.development? %>
  <iframe
    style="margin-top:10px"
    width="100%"
    height="400"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/search?key=<%= CONFIG_API["google_maps"] %>&q=<%= @location.name %>&zoom=13&q=diner&center=<%= @location.latitude %>,<%= @location.longitude %>">
  </iframe>
  <% else %>
  <iframe
    style="margin-top:10px"
    width="100%"
    height="400"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/search?key=<%= ENV["GOOGLE_API_KEY"] %>&q=<%= @location.name %>&zoom=13&q=diner&center=<%= @location.latitude %>,<%= @location.longitude %>">
  </iframe>
<% end %>

<h3>Nearby Locations</h3>
<ul>
<% for location in @location.nearbys(10) %>
  <li><%= link_to "#{location.name}, #{location.address}", location %> (<%= location.distance.round(2) %> miles)</li>
<% end %>
</ul>


<%= link_to 'Edit', edit_location_path(@location) %> |
<%= link_to 'Back', locations_path %>
